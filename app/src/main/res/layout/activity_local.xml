<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <com.example.lksynthesizeapp.ChiFen.View.MyWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>



    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="65dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginLeft="6dp"
        android:orientation="vertical"
        android:background="@color/header_color">

        <RadioButton
            android:id="@+id/rbCamera"
            style="@style/MainRadionButton"
            android:background="@drawable/button_select"
            android:drawableTop="@drawable/ic_camera"
            android:text="截图"
            android:textSize="12dp"
            android:textColor="@color/whith"/>

        <RadioButton
            android:id="@+id/rbSound"
            style="@style/MainRadionButton"
            android:background="@drawable/button_select"
            android:drawableTop="@drawable/ic_video"
            android:text="录像"
            android:textSize="12dp"
            android:textColor="@color/whith"/>

        <RadioButton
            android:id="@+id/rbAlbum"
            style="@style/MainRadionButton"
            android:background="@drawable/button_select"
            android:drawableTop="@drawable/ic_file"
            android:text="文件夹"
            android:textSize="12dp"
            android:textColor="@color/whith"/>

        <RadioButton
            android:id="@+id/rbRefresh"
            style="@style/MainRadionButton"
            android:background="@drawable/button_select"
            android:drawableTop="@drawable/ic_client_setting"
            android:text="设置"
            android:textSize="12dp"
            android:textColor="@color/whith"/>

        <RadioButton
            android:id="@+id/rbBack"
            style="@style/MainRadionButton"
            android:background="@drawable/button_select"
            android:drawableTop="@drawable/ic_finish"
            android:text="返回"
            android:textSize="12dp"
            android:textColor="@color/whith"/>

    </RadioGroup>

    <include layout="@layout/activity_header"/>

    <LinearLayout
        android:id="@+id/linearLayoutStop"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/ivTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_tirme" />

    </LinearLayout>

</FrameLayout>