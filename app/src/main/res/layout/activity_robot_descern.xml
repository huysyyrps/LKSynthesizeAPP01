<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_margin="3dp"
            android:orientation="vertical"
            android:background="@drawable/linelayout_yello_pxqradion">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/SpideTextView"
                    android:text="磁轭控制  :"
                    android:layout_width="70dp"/>

                <TextView
                    android:id="@+id/tvCEControl"
                    style="@style/SpideTextView"
                    android:layout_marginLeft="0dp"
                    android:text="---"
                    android:layout_width="80dp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_triangle_red" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/SpideTextView"
                    android:text="磁化控制  :"
                    android:layout_width="70dp"/>

                <TextView
                    android:id="@+id/tvCHControl"
                    style="@style/SpideTextView"
                    android:layout_marginLeft="0dp"
                    android:text="---"
                    android:layout_width="80dp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_triangle_red" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/SpideTextView"
                    android:text="探  照  灯  :"
                    android:layout_width="70dp"/>

                <TextView
                    android:id="@+id/tvLight"
                    style="@style/SpideTextView"
                    android:layout_marginLeft="0dp"
                    android:text="---"
                    android:layout_width="80dp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_triangle_red" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/SpideTextView"
                    android:text="电  池  阀  :"
                    android:layout_width="70dp"/>

                <TextView
                    android:id="@+id/tvSpary"
                    style="@style/SpideTextView"
                    android:layout_marginLeft="0dp"
                    android:text="---"
                    android:layout_width="80dp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_triangle_red" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <TextView
                        style="@style/SpideTextView"
                        android:text="黑白选择  :"
                        android:layout_width="70dp"/>

                <TextView
                        android:id="@+id/tvLightSelect"
                        style="@style/SpideTextView"
                        android:layout_marginLeft="0dp"
                        android:text="---"
                        android:layout_width="80dp"/>

                <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_triangle_red" />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                <TextView
                        style="@style/SpideTextView"
                        android:text="控制模式  :"
                        android:layout_width="70dp"/>

                <TextView
                        android:id="@+id/tvControl"
                        style="@style/SpideTextView"
                        android:layout_marginLeft="0dp"
                        android:text="---"
                        android:layout_width="80dp"/>

                <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:visibility="invisible"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_triangle_red" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutWrite"
            android:visibility="invisible"
                android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:background="@drawable/linelayout_yello_pxqradion">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="保护电压  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvProtectVoltage"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:layout_width="70dp"
                            android:text="保护电流  :" />

                    <TextView
                            android:id="@+id/tvProtectCurrent"
                            style="@style/SpideTextView"
                            android:layout_width="80dp"
                            android:text="---" />

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:layout_width="70dp"
                            android:text="运行速度  :" />

                    <TextView
                            android:id="@+id/tvRunningSpeed"
                            style="@style/SpideTextView"
                            android:layout_width="80dp"
                            android:text="---" />

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="运行距离  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvRunningDistance"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="磁化间隔  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvMagnetizeDistance"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="行进距离  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvDistance"
                            style="@style/SpideTextView"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="---" />

                    <ImageView
                            android:visibility="invisible"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/linelayout_yello_pxqradion">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="磁化时间  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvMagnetizeTime"
                            style="@style/SpideTextView"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="---" />

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="磁化电压  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvMagnetizeVoltage"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:layout_width="70dp"
                            android:text="磁化频率  :" />

                    <TextView
                            android:id="@+id/tvMagnetizeRate"
                            style="@style/SpideTextView"
                            android:layout_width="80dp"
                            android:text="---" />

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="电池电压  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvVoltage"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:visibility="invisible"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="电池电压  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvBatteryVoltage"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:visibility="invisible"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/SpideTextView"
                            android:text="工作电流  :"
                            android:layout_width="70dp"/>

                    <TextView
                            android:id="@+id/tvBatterycurrent"
                            style="@style/SpideTextView"
                            android:layout_marginLeft="0dp"
                            android:text="---"
                            android:layout_width="80dp"/>

                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:visibility="invisible"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_triangle_red" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">

            <RadioButton
                    android:id="@+id/rbOther"
                    style="@style/MainRadionButton"
                    android:layout_height="60dp"
                    android:background="@drawable/button_select"
                    android:drawableTop="@drawable/ic_other"
                    android:text="其他"
                    android:textSize="12dp"
                    android:textColor="@color/whith"/>

            <RadioButton
                android:id="@+id/rbCamera"
                style="@style/MainRadionButton"
                android:layout_height="60dp"
                android:background="@drawable/button_select"
                android:drawableTop="@drawable/ic_camera"
                android:text="截图"
                android:textSize="12dp"
                android:textColor="@color/whith"/>

            <RadioButton
                android:id="@+id/rbVideo"
                style="@style/MainRadionButton"
                android:layout_height="60dp"
                android:background="@drawable/button_select"
                android:drawableTop="@drawable/ic_video"
                android:text="录像"
                android:textSize="12dp"
                android:textColor="@color/whith"/>

            <RadioButton
                android:id="@+id/rbAlbum"
                style="@style/MainRadionButton"
                android:layout_height="60dp"
                android:background="@drawable/button_select"
                android:drawableTop="@drawable/ic_file"
                android:text="文件夹"
                android:textSize="12dp"
                android:textColor="@color/whith"/>
            <RadioButton
                android:id="@+id/rbSetting"
                style="@style/MainRadionButton"
                android:layout_height="60dp"
                android:background="@drawable/button_select"
                android:drawableTop="@drawable/ic_client_setting"
                android:text="设置"
                android:textSize="12dp"
                android:textColor="@color/whith"/>

            <RadioButton
                android:id="@+id/rbBack"
                style="@style/MainRadionButton"
                android:layout_height="60dp"
                android:background="@drawable/button_select"
                android:drawableTop="@drawable/ic_finish"
                android:text="返回"
                android:textSize="12dp"
                android:textColor="@color/whith"/>
        </RadioGroup>
        <LinearLayout
            android:id="@+id/linearLayoutStop"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_tirme" />
            <Chronometer
                android:id="@+id/chronometer"
                android:textColor="@color/red"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>

        </LinearLayout>
    </FrameLayout>

    <include
        android:id="@+id/frameLayoutitem"
        layout="@layout/mainitem_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom" />

</FrameLayout>
