<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/header_color">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/linelayout_black_radion"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">
            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_close"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSSID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/linelayout_color_radion"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="aacesdsafcvs"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnCapySSID"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/linelayout_color_radion"
            android:text="复制名称"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvPWD"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/linelayout_color_radion"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="30dp"
            android:text="88888888"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btnCapyPWD"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/linelayout_color_radion"
            android:text="复制密码"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/linelayout_yello_pxqradion">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="温馨提示:"
                android:textStyle="bold"
                android:textColor="@color/red"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/whith"
                android:lineHeight="17dp"
                android:text="请在下拉状态栏内长按WIFI按钮，跳转到WIFI配置界面后复制“名称”、“密码”进行配置。如不配置将无法连接设备摄像头。"/>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/linelayout_color_bigradion"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSetting"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置"
                android:background="@drawable/button_select"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <View style="@style/VLine"
                android:layout_height="10dp"/>

            <TextView
                android:id="@+id/tvCancle"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/button_select"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>